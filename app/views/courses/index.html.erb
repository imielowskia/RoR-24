<p style="color: green"><%= notice %></p>

<% content_for :title, "Courses" %>

<div class="row" style="background-color: #CCCCCC">
  <h1>
    Courses
  </h1>
</div>

<div class="row">
  <div class="col-2">
    <strong>Nazwa:</strong>
  </div>
  <div class="col">
    <p> <strong>Lista grup:</strong> </p>
  </div>
</div>
<div id="courses">
  <% @courses.each do |course| %>
    <%= render course %>
    <p>
      <%= link_to "Show this course", course, class: "btn btn-sm btn-primary" %>
    </p>
  <% end %>
</div>
<hr>
<%= link_to "New course", new_course_path, class: "btn btn-sm btn-primary" %>
